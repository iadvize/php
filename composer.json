{
  "name": "iadvize/php-convention",
  "description": "Iadvize PHP conventions",
  "keywords": [
    "convention",
    "quality",
    "php"
  ],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Rémy Théroux",
      "email": "remy.theroux@iadvize.com"
    },
    {
      "name": "Marc Fricou",
      "email": "marc.fricou@iadvize.com"
    },
    {
      "name": "Julien Breux",
      "email": "julien.breux@gmail.com"
    }
  ],
  "require": {
    "php": ">=5.6",
    "squizlabs/php_codesniffer": "2.6.*",
    "phpmd/phpmd": "2.4.*",
    "friendsofphp/php-cs-fixer": "1.11.*",
    "escapestudios/symfony2-coding-standard": "2.9.*"
  },
  "scripts": {
    "post-install-cmd": [
      "./vendor/bin/phpcs --config-set installed_paths $PWD/vendor/escapestudios/symfony2-coding-standard"
    ]
  }
}
