{
  "name": "iadvize/php-convention",
  "description": "Iadvize PHP conventions",
  "keywords": [
    "convention",
    "quality",
    "php"
  ],
  "version": "0.1.0",
  "type": "project",
  "authors": [
    {
      "name": "Rémy Théroux",
      "email": "remy.theroux@iadvize.com"
    }
  ],
  "require": {
    "php": ">=5.4.23",
    "squizlabs/php_codesniffer": "2.*",
    "phpmd/phpmd": "^2.3.2",
    "fabpot/PHP-CS-Fixer": "*",
    "escapestudios/symfony2-coding-standard": "~2.0"
  },
    "scripts": {
      "post-install-cmd": [
        "./vendor/bin/phpcs --config-set installed_paths $PWD/vendor/escapestudios/symfony2-coding-standard"
      ]
    }
}
