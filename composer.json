{
  "name": "iadvize/php-convention",
  "description": "Iadvize PHP conventions",
  "keywords": [
    "convention",
    "quality",
    "php"
  ],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Rémy Théroux",
      "email": "remy.theroux@iadvize.com"
    },
    {
      "name": "Marc Fricou",
      "email": "marc.fricou@iadvize.com"
    }
  ],
  "require": {
    "php": ">=5.4.23",
    "squizlabs/php_codesniffer": "3.*",
    "phpmd/phpmd": "2.*",
    "friendsofphp/php-cs-fixer": "*",
    "escapestudios/symfony2-coding-standard": "~3.0"
  },
  "scripts": {
    "post-install-cmd": [
      "./vendor/bin/phpcs --config-set installed_paths $PWD/vendor/escapestudios/symfony2-coding-standard"
    ]
  }
}
