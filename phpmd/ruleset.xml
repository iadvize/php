<?xml version="1.0"?>
<ruleset name="Iadvize">
    <description>iAdvize coding standards</description>

    <exclude-pattern>*/build/*</exclude-pattern>
    <exclude-pattern>*/data/*</exclude-pattern>
    <exclude-pattern>*/src/Vendors/*</exclude-pattern>
    <exclude-pattern>*/migration/*</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/vendors/*</exclude-pattern>

    <rule ref="PSR1"/>
    <rule ref="PSR2"/>

    <rule ref="Symfony2">
        <exclude name="Squiz.Strings.ConcatenationSpacing"/>
        <exclude name="Symfony2.Functions.ScopeOrder"/>
        <exclude name="Symfony2.Objects.ObjectInstantiation"/>
        <exclude name="Generic.Functions.OpeningFunctionBraceBsdAllman"/>
    </rule>

    <rule ref="Squiz.Strings.DoubleQuoteUsage"/>
    <rule ref="Generic.Formatting.MultipleStatementAlignment"/>

    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="200"/>
            <property name="absoluteLineLimit" value="200"/>
        </properties>
    </rule>
</ruleset>